<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tunakleague.com.redemption.authentication.RegistrationActivity"
    android:id="@+id/activity_registration"
    android:background="@drawable/wallpaper4">

    <TextView android:text="Collabin "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:textIsSelectable="false"
        android:textSize="55dp"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--Register Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Register"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="27dp"
        android:background="@color/blue"
        android:id="@+id/register_button"
        android:onClick="registerUser"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_name_text"
        android:text=" UserName"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp" />
    <!--Username input field -->

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/user_input"
        android:textSize="23dp"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@+id/user_name_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <!-- Email Text -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text=" Email"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_above="@+id/email_input"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--Email input field -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:textSize="23dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:id="@+id/email_input"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!-- Password input text -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="Enter Password"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_above="@+id/password_input"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--Password input field -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:textSize="23dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:id="@+id/password_input"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />>



    <!--Password confirm text -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:text="Confirm Password"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_above="@+id/password_confirm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--Password confirm field -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:textSize="23dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:id="@+id/password_confirm"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/register_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />








